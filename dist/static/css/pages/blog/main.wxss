@import "/static/css/vendor.wxss";

.blog {
  position: relative;
  min-height: 100%;
  margin: 0;
  padding: 0;
  background: #eeeeee;
}
.detail {
  height: 100%;
  overflow: hidden;
}
.pages {
  position: relative;
  overflow: hidden;
  width: 100%;
}
.header {
  position: relative;
  padding: 120rpx 0 40rpx;
  background: #fafafa;
}
.header:before {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  background-image: linear-gradient(#fafafa, #fff);
}
.mac {
  position: relative;
  width: 70%;
  height: 260rpx;
  margin: auto;
  padding-top: 60rpx;
  text-align: center;
  background: #fafafa;
  background: linear-gradient(to right bottom, #fff, #eee);
  border: 12rpx solid #222;
  border-width: 12rpx 12rpx 16rpx;
  border-radius: 16rpx 16rpx 0 0;
}
.mac:after {
  content: "";
  position: absolute;
  width: 134%;
  left: -17%;
  bottom: -28rpx;
  height: 12rpx;
  border-radius: 0 0 80rpx 80rpx/0 0 10rpx 10rpx;
  background: #ccc;
}
.logo {
  margin-bottom: 30rpx;
}
.logo ._img {
  width: 140rpx;
  height: 140rpx;
  overflow: hidden;
  border-radius: 50%;
  background: #FFF;
  box-shadow: rgba(255, 255, 255, 0.1) 0 0 0 10rpx, rgba(0, 0, 0, 0.15) 0 0 10rpx 8rpx;
  transition: transform .4s ease-out;
}
.logo ._img:hover {
  transform: rotate(360deg);
}
.mac ._p {
  font-size: 26rpx;
  color: #333;
}
.articleListPage-tags-cnt {
  margin-bottom: 40rpx;
}
.articleListPage-tags {
  position: static !important;
  width: 100%;
  background: #fff;
  border-bottom: 2rpx solid #c4cdd4;
  z-index: 5;
}
.grid-row {
  width: 100%;
  position: relative;
  margin: auto;
  zoom: 1;
  transition: all .3s ease-out;
}
.grid-row:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.content {
  padding: 24rpx 0 10rpx 20rpx;
}
.content ._div {
  position: relative;
  display: inline-block;
  max-width: 100%;
  height: 48rpx;
  margin: 0 20rpx 10rpx 0;
  line-height: 48rpx;
  padding: 0 16rpx 0 36rpx;
  border-radius: 0 8rpx 8rpx 0;
  background: #eee;
  font-size: 24rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
}
.content ._div:before {
  position: absolute;
  content: "";
  top: 0;
  left: 0;
  width: 0;
  height: 0;
  border-width: 24rpx 24rpx 25rpx 0;
  border-color: #fff transparent;
  border-style: solid;
}
.content ._div:after {
  position: absolute;
  content: "";
  width: 8rpx;
  height: 8rpx;
  top: 20rpx;
  left: 16rpx;
  border-radius: 100%;
  background: #fff;
}
.content ._div:active {
  background: #f70;
  color: #fff;
}
.content ._span {
  opacity: 0.3;
  padding: 0 0 0 10rpx;
}
.article {
  margin: 0 20rpx;
}
.article-item {
  padding-bottom: 20rpx;
}
.article-list {
  position: relative;
  background: #fff;
  padding: 40rpx;
  margin-bottom: 30rpx;
}
.label {
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  background: #f70;
  box-shadow: -2rpx 2rpx 4rpx #000;
}
.label:before {
  position: absolute;
  content: "";
  width: 0;
  height: 0;
  top: 0;
  right: 0;
  border: 2rpx solid #fff;
  border-width: 0 60rpx 60rpx 0;
  border-color: transparent transparent #fff;
}
.label ._span {
  position: absolute;
  display: block;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  transform: rotate(45deg) scale(.8);
  text-align: center;
  line-height: 30rpx;
  color: #fff;
  font-size: 30rpx;
}
.title {
  line-height: 40rpx;
}
.title ._a {
  font-size: 40rpx;
  font-weight: 700;
  color: #3d464d !important;
}
.introduction {
  margin: 30rpx 0;
}
.introduction .icon-user,
.icon-clock,
.icon-eye {
  color: #95a5a6;
  font-size: 28rpx;
  line-height: 28rpx;
  margin-right: 20rpx;
  display: inline-block;
}
.introduction .user,
.time,
.view {
  margin-left: 10rpx;
  font-size: 28rpx;
  line-height: 28rpx;
}
.article-content {
  line-height: 1.2;
}
.readmore {
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 60rpx;
}
.left {
  float: left;
}
.icon-price-tags {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #f70;
}
.tage {
  color: #333;
  font-size: 28rpx;
  background: #eee;
  margin: 0 10rpx 0 10rpx;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  display: inline-block;
}
.right {
  float: right;
}
.readmore {
  color: #f70;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 28rpx;
}
.bottom {
  font-size: 28rpx;
  text-align: center;
  background: #fff;
  width: 26%;
  color: #595959;
  margin: auto;
  height: 36rpx;
  line-height: 36rpx;
}
.content .active {
  background: #f70;
  color: #fff;
}