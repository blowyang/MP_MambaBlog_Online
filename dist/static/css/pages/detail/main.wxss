}
.need-login {
  height: 90rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #999;
}
.resp-head {
  color: #FF6A6A;
  margin: 20rpx 0 26rpx 20rpx;
  font-size: 26rpx;
}
.comment {
  border-radius: 4rpx;
  margin-bottom: 15rpx;
  padding: 20rpx 30rpx;
  position: relative;
  align-items: center;
  background-color: white;
}
.comment-info {
  padding: 10rpx 0 15rpx 0;
  margin-bottom: 18rpx;
  color: gray;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
