  font-size: 28rpx;
  float: left;
  margin-top: 18rpx;
  margin-left: 16rpx;
}
.like-btn {
  height: 60rpx;
  width: 10%;
  line-height: 60rpx;
  text-align: center;
  margin-right: 8rpx;
